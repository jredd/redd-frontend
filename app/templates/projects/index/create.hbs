<div id="fade" class="black_overlay" {{action 'cancel' on='click'}}></div>
<div class="pop_up">
    <div class="row">
        <h3>Create Project</h3>
    </div>
    <div class="row">
        <form class="margin-base-vertical" {{action "create_project" on="submit"}}>
            <div class="row">
                <div class="large-12 column">
                    <div class="large-12 columns">
                        <label>Name</label>
                      {{input class='form-control' value=name type='input' placeholder='Name' required=''}}
                    </div>
                    <div class="large-12 columns">
                      {{input class='checkbox1' type="checkbox" name="is_active" checked=true}}<label> Active</label>
                    </div>
                    <div class="large-12 columns">
                      <label>Managing User
                          <select>
                            {{#each model as |user|}}
                                <option value={{user.id}}>{{user.name}}</option>
                            {{/each}}
                          </select>
                      </label>
                    </div>
                    <div class="large-12 columns">
                        <button class="fa-upload">Upload Icon</button>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <footer class="create-footer">
        <ul>
            <li class=""><a {{action 'cancel' on='click'}}>Cancel</a></li>
            <li class="pull-right"><a>Create</a></li>
        </ul>
    </footer>
</div>