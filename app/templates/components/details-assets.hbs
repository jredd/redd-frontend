<div class="">
    <h1 class="column">Assets</h1>
</div>
<div class="small-up-2 medium-up-3 large-up-4 tiled-list">
  {{#each assets as |asset|}}
      <section class="column">
          <div class="callout">
              <label>{{asset.name}}</label>
              <ul>
                  <li>
                    {{#if project.icon}}
                      {{project.icon}}
                    {{else}}
                        <img src="/assets/default_asset_icon.jpg">
                    {{/if}}
                  </li>
                  <li>{{format-date project.date_created}}</li>
                  <li>
                    {{#if project.is_active}}
                        Status:<span class="is_active"></span>
                    {{else}}
                        Status:<span class="is_inactive"></span>
                    {{/if}}
                  </li>
              </ul>
              <div class="">
                {{#link-to "projects.details.departments" project.id class="expanded button"}}More{{/link-to}}
              </div>
          </div>
      </section>
  {{else}}
      <h3 class="no-items">0 Sub-Assets Found</h3>
  {{/each}}
</div>
{{outlet}}
